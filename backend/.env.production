NODE_ENV=production
PORT=5000

# IMPORTANT: Update these values before deploying!
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ns-sitecraft
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-32-CHARACTER-SECRET-KEY
JWT_EXPIRE=24h

# Frontend URL - Update with your Vercel/Netlify URL
FRONTEND_URL=https://your-app.vercel.app

# Email Configuration (Optional - for inquiry notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM_NAME=NS SiteCraft Solutions
SMTP_FROM_EMAIL=noreply@nssitecraft.com
ADMIN_EMAIL=admin@nssitecraft.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
